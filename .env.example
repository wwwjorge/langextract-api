# LangExtract API - Environment Variables Example
# Copy this file to .env and configure your values

# STACK CONFIGURATION
# =============================================================================
# Model Configuration
DEFAULT_TEMPERATURE=0.3

# File Upload Settings
MAX_FILE_SIZE=50
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.txt,.pdf,.docx,.md,.json

# CORS Configuration (use * for development, specific domains for production)
CORS_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Timeout Configuration
MAX_FILE_SIZE=50
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================
REQUEST_TIMEOUT=300
LLM_TIMEOUT=180

# Provider URLs (WSL/Linux compatible)
# Use 172.17.0.1 for Docker host network access in WSL
OLLAMA_BASE_URL=http://172.17.0.1:11434
OPENAI_BASE_URL=https://api.openai.com/v1
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
CLOUDFLARE_BASE_URL=https://api.cloudflare.com/client/v4/accounts

# API Keys (configure as needed)
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https: wss:; frame-ancestors 'self'; base-uri 'self'; form-action 'self'

# =============================================================================
# DOCKER RESOURCE LIMITS
# =============================================================================
CPU_LIMIT=2.0
MEMORY_LIMIT=2G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M

# =============================================================================
# TRAEFIK CONFIGURATION
# =============================================================================
DOMAIN=api.yourdomain.com
FRAME_DENY=false

# Rate Limiting (optional)
ENABLE_RATE_LIMIT=true
RATE_LIMIT_AVERAGE=100
RATE_LIMIT_BURST=200

# =============================================================================
# PORTAINER CONFIGURATION
# =============================================================================
PORTAINER_TEAM=langextract-team
PORTAINER_USERS=admin
MAINTAINER_EMAIL=admin@yourdomain.com

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for development environment
# STACK_NAME=dev
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# DOMAIN=api-dev.yourdomain.com
# LangExtract API Configuration for Portainer Deploy
# API Configuration
API_PORT=8001
API_KEY=langextract_api_key_2025